@page "/register"
@rendermode InteractiveServer
@using ApiContracts
@using ApiContracts.Dtos
@using Microsoft.AspNetCore.Components.Forms
@using global::BlazorApp.Services.Interface
@inject IRegisterCustomerService registerCustomerService

<link href="css/Register.css" rel="stylesheet" />

<div class="register-container">
   
    <h2 class="register-title">Create Account</h2>
    <p class="register-subtitle">Join ReSpawnMarket and start buying & selling safely!</p>  

<EditForm EditContext="editContext" OnValidSubmit="CreateCustomer">
    <DataAnnotationsValidator />
    <ValidationSummary />

<div class="form-card">
   <div class="form-grid">
            <div>
            <label class="form-label">First name</label>
            <InputText class="form-control styled-input" @bind-Value="form.FirstName" />
            <ValidationMessage For="@(() => form.FirstName)" />
        </div>

        <div>
            <label class="form-label">Last name</label>
            <InputText class="form-control styled-input" @bind-Value="form.LastName" />
            <ValidationMessage For="@(() => form.LastName)" />
        </div>

        <div class="form-grid-full">
            <label class="form-label">Email</label>
            <InputText class="form-control styled-input" type="email" @bind-Value="form.Email" />
            <ValidationMessage For="@(() => form.Email)" />
        </div>

        <div>
            <label class="form-label">Phone number</label>
            <InputText class="form-control styled-input" @bind-Value="form.PhoneNumber" />
            <ValidationMessage For="@(() => form.PhoneNumber)" />
        </div>

        <div>
            <label class="form-label">Password</label>
            <InputText class="form-control styled-input" type="password" @bind-Value="form.Password" />
            <ValidationMessage For="@(() => form.Password)" />
        </div>

        <div>
            <label class="form-label">Repeat password</label>
            <InputText class="form-control styled-input" type="password" @bind-Value="confirmPassword" />
        </div>

        <div>
            <label class="form-label">Street</label>
            <InputText class="form-control styled-input" @bind-Value="form.StreetName" />
            <ValidationMessage For="@(() => form.StreetName)" />
        </div>

        <div>
            <label class="form-label">Secondary unit</label>
            <InputText class="form-control styled-input" @bind-Value="form.SecondaryUnit" />
            <ValidationMessage For="@(() => form.SecondaryUnit)" />
        </div>

        <div>
            <label class="form-label">Postal code</label>
            <InputNumber class="form-control styled-input" @bind-Value="form.PostalCode" />
            <ValidationMessage For="@(() => form.PostalCode)" />
        </div>

        <div>
            <label class="form-label styled-input">City</label>
            <InputText class="form-control styled-input" @bind-Value="form.City" />
            <ValidationMessage For="@(() => form.City)" />
        </div>
    </div>

<div class="button-row">
   <div style="margin-top:25px; text-align:center;">
    <button class="btn btn-primary create-btn"
            type="submit"
            disabled="@busy">
        @(busy ? "Creating..." : "Create")
    </button>

    <button class="btn btn-outline-secondary reset-btn"
            type="button"
            @onclick="ResetForm"
            disabled="@busy">
        Reset
    </button>
</div>
</div>
</div>

</EditForm>
</div>

@if (!string.IsNullOrEmpty(message))
{
    <div class="alert @(success ? "alert-success" : "alert-danger") mt-3">
        @message
    </div>
}

@code {
    private CreateCustomerDto form = new()
    {
        FirstName = "", LastName = "", Email = "", Password = "",
        PhoneNumber = "", StreetName = "", City = "", PostalCode = 0,
        SecondaryUnit = null
    };


    private string confirmPassword = "";

    private EditContext? editContext;

    protected override void OnInitialized()
    {
        editContext = new EditContext(form);
    }

    private string? message;
    private bool success;
    private bool busy;

    private async Task CreateCustomer()
    {
        busy = true;
        message = null;
        success = false;

        try
        {

            if (form.Password != confirmPassword)
            {
                success = false;
                message = "Passwords do not match.";
                busy = false;
                return;
            }

            var created = await registerCustomerService.AddCustomerAsync(form);
            success = true;
            message = $"Customer '{created.FirstName} {created.LastName}' created successfully!";

            form = new CreateCustomerDto
            {
                FirstName = "", LastName = "", Email = "", Password = "",
                PhoneNumber = "", StreetName = "", City = "", PostalCode = 0,
                SecondaryUnit = null
            };
            confirmPassword = "";
            editContext = new EditContext(form);
        }
        catch (Exception ex)
        {
            success = false;
            message = $"Error: {ex.Message}";
        }
        finally
        {
            busy = false;
        }
    }

    private void ResetForm()
    {
        form = new CreateCustomerDto
        {
            FirstName = "", LastName = "", Email = "", Password = "",
            PhoneNumber = "", StreetName = "", City = "", PostalCode = 0,
            SecondaryUnit = null
        };
        confirmPassword = "";
        editContext = new EditContext(form);
    }
}
